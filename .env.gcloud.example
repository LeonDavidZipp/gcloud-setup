# =============================================================================
# GCloud Project Setup - Environment Variables
# =============================================================================
# Copy this file to .env and fill in your values
# The setup scripts will automatically load this file
# =============================================================================

# GCP Project
GCP_PROJECT_ID="your-project-id"
GCP_PROJECT_NUMBER="123456789012"

# GitHub Repository
GITHUB_ORGANIZATION="your-org"
GITHUB_REPOSITORY="your-repo"

# Service Account
SERVICE_ACCOUNT_NAME="github-actions"

# Artifact Registry
ARTIFACT_REGISTRY_NAME="docker-registry"
ARTIFACT_REGISTRY_LOCATION="europe-west1"

# Cloud Run
CLOUD_RUN_SERVICE="your-service-name"
CLOUD_RUN_REGION="europe-west1"

# Secret Manager (space-separated list, leave empty if none)
SECRETS_TO_CREATE=""
